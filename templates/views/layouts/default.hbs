			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			html, body {
				min-height: 100%;
				width: 100%;
			}

			body {
				float: left;
				min-width: 300px;
			}

			body * {
				font-family: 'Belleza', sans-serif;
				/*font-weight: bold;*/
				line-height: 1.1;
			}

			p, li, a {
				font-size: 16px;
			}

			.homeLink {
				padding: 0px;
			}

			.menuContainer .smallLogo {
				position: relative;
				left: 0px;
				margin-left: 0px;
			}

			.menuContainer hr, hr {
				border-top-width: 0px;
				border-bottom-width: 0px;
				border: 1px solid #FF6600;
				padding: 0px;
				min-height: 0px;
			}

			.contentContainer{
				border-left: 2px solid #FF6600;
			}

			.menuContainer .menu {
				float:left;
				padding: 0px;
				font-family: 'Bilbo', Arial, sans-serif;
				padding-bottom:15px;
				background-color:white;
			}

			.menuContainer div.menu.mobileMenu {
				clear: both;
				display: block;
				width: 100%;
				border-top: 2px solid #FF6600;
				border-bottom: 2px solid #ff6600;
				padding-top:15px;
				margin-right:30px;
			}

			.menuContainer .menu a {
				font-family: 'Bilbo', Arial, sans-serif;
				color:#4056A1;
				display: block;
				width: 100%;
				text-align: center;
				font-size: 22px;
			}

			.menuContainer .menu a:hover,
			.menuContainer .menu a:visited,
			.menuContainer .menu a:active {
				text-decoration: none;
			}

			.menuContainer .menu a:hover {
				color:#FF6600;

			}

			.menuContainer .menu a.activePage{
				font-weight: bold;
			}

			.menuContainer .menu a.activePage:hover{
				color:#4056A1;
			}

			.menuContainer .hamburger-menu img.active {
				border: 2px solid #FF6600;
				border-width: 2px;
			}

			.menuContainer .hamburger-menu img {
				border: 0px solid white;
				-webkit-transition: border .25s linear;
				-moz-transition: border .25s linear;
			}

			.menuContainer .hamburger-menu {
				height: 100%;
				background-color: #4056A1;
				margin-right: 30px;
				position: absolute;
				right: 0;
			}

			.menuContainer .menu.active {
				width:100%;
				-webkit-transition: all 5s ease-in-out;
				-moz-transition: all 5s ease-in-out;

			}

			.active .item {
				padding-top:10px;
				padding-bottom:10px;
			}

			.active .item a {
				font-size:36px;
			}

			.item {
				clear: left;
				margin-bottom: 5px;
			}

			.contentContainer {
				padding: 30px;
				padding-top : 15px;
				min-height:500px;
			}

			.contentContainer p {
				padding-left: 30px;
			}

			.contentContainer h1,
			.contentContainer h2,
			.contentContainer h3,
			.contentContainer h4
			{
				font-family: 'Bilbo', Arial, sans-serif;
				font-weight: bold;
				/*text-transform: uppercase;*/
			}

			.contentContainer img, .contentContainer iframe {
				border: 2px solid #FF6600;
				padding: 5px;
			}

			.menuContainer {
				position: fixed;
				display: block;
				z-index: 999;
				background-color: white;
				padding: 0px;
			}

			@media (max-width: 991px) {
				.menuContainer {
					width: 100%;
					min-width: 300px;
				}

				.menuContainer,
				.contentSpacer,
				.menuContainer img,
				.menuContainer .hamburger-menu
				{
					height: 75px;
				}

				.contentContainer{
					border-right: 2px solid #FF6600;
				}

			}

			@media (max-width: 1199px) and (min-width: 992px) {
				.menuContainer {
					width: calc(80% * 0.333333);
				}
			}

			@media (min-width: 1200px) {

				.menuContainer {
					width: calc(80% * 0.25);
				}
			}

			.footer {
				padding-bottom: 20px;
			}

			.footer hr{
