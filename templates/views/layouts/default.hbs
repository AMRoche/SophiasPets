	<body>
		<div id="body" class="col-md-10 col-md-offset-1 col-xs-12">
			<!--
				Flash messages allow you to display once-off status messages to users, e.g. form
				validation errors, success messages, etc
			-->
			{{#if messages}}
			<div id="flash-messages">
				{{#if messages.info}}
				<div class="alert alert-info">
						{{{flashMessages messages.info}}}
				</div>
				{{/if}}
				{{#if messages.success}}
				<div class="alert alert-success">
						{{{flashMessages messages.success}}}
				</div>
				{{/if}}
				{{#if messages.warning}}
				<div class="alert alert-warning">
						{{{flashMessages messages.warning}}}
				</div>
				{{/if}}
				{{#if messages.error}}
				<div class="alert alert-danger">
						{{{flashMessages messages.error}}}
				</div>
				{{/if}}
			</div>
			{{/if}}
				<div class="menuContainer col-md-4 col-lg-3 col-xs-12">
					<a href="/" class="col-md-12 homeLink" title="Take me home!">
						<img class="hidden-xs hidden-sm col-md-12" src="/images/logoBlack.png" alt="Sophia's Pet Care Services Logo"/>
						<img class="smallLogo hidden-md hidden-lg" src="/images/logoBlackSmall.png" alt="Sophia's Pet Care Services Logo"/>
					</a>
					<a href="#menu" class="hamburger-menu hidden-md hidden-lg">
						<img src="/images/hamburger-transparent.png" alt="Hamburger logo" class="hidden-md hidden-lg"/>
					</a>
					<hr class="hidden-xs hidden-sm col-md-11">
					<nav class="menu col-md-12 hidden-xs hidden-sm">
						{{# each nav}}
							<div class="item">
								{{#if blog}}
									<a href="/blog/" class="{{#ifeq ../../this.section 'blog'}}activePage{{else}}{{/ifeq}}
"> {{menuTitle}} </a>
								{{else}}
									<a href="/page/{{slug}}" class="{{#ifeq ../../section this.slug}}activePage{{else}}{{/ifeq}}
"> {{menuTitle}} </a>
								{{/if}}
							</div>
						{{/each}}
					</nav>
				</div>
				<div class="contentSpacer col-md-hidden col-lg-hidden"></div>
				<div class="contentContainer col-md-offset-4 col-lg-offset-3 col-md-8 col-lg-9 col-xs-12">
					<div>
					<!-- The content block should contain the body of your template's content-->
						{{{body}}}
					</div>
				</div>
			</div>

			<div class="footer col-xs-12 col-md-10 col-xs-offset-0 col-md-offset-1">
			<hr>
				{{>footer}}
			</div>


